doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description" content="")
    meta(name="author" content="")

    title New Age - Start Bootstrap Theme

    link(href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="vendor/font-awesome/css/font-awesome.min.css")
    link(rel="stylesheet" href="vendor/simple-line-icons/css/simple-line-icons.css")
    link(href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet")
    link(rel="stylesheet" href="device-mockups/device-mockups.min.css")
    link(href="css/new-age.min.css" rel="stylesheet")

  body#page-top

    nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top
      container
        a.navbar-brand.js-scroll-trigger(href="#page-top") Start Bootstrap
        button.navbar-toggler.navbar-toggler-right(type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation")
          Menu
            i.fa.fa-bars

        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link.js-scroll-trigger(href="#download") Download

            li.nav-item
              a.nav-link.js-scroll-trigger(href="#features") Features

            li.nav-item
              a.nav-link.js-scroll-trigger(href="#contact") Contact

    header.masthead
      .container.h-100
        .row.h-100
          .col-lg-7.my-auto
            .header-content.mx-auto
              h1.mb-5 New Age is an app landing page that will help you beautifully showcase your new mobile app, or anything else!
              a.btn.btn-outline.btn-xl.js-scroll-trigger(href="#download") Start Now for Free!


        .col-lg-5.my-auto
          .device-container
            .device-mockup.iphone6_plus.portrait.white
              .device
                .screen
                  img(src="img/demo-screen-1.jpg" alt="").img-fluid
                .button

    section#download.download.bg-primary.text-center
      .container
        .row
          .col-md-8.mx-auto
            h2.section-heading Discover what all the buzz is about!
            p Our app is available on any mobile device! Download now to get started!
            .badges
              a.badge-link(href="#")
                img(src="img/google-play-badge.svg" alt="")
              a.badge-link(href="#")
                img(src="img/app-store-badge.svg" alt="")

    section#features.features
      .container
        .section-heading.text-center
          h2 Unlimited Features, Unlimited Fun
          p.text-muted Check out what you can do with this app theme!
          hr

        .row
          .col-lg-4.my-auto
            .device-container
              .device-mockup.iphone6_plus.portrait.white
                .device
                  .screen
                    img(src="img/demo-screen-1.jpg" alt="").img-fluid
                  .button

          .col-lg-8.my-auto
            .container-fluid
              .row
                .col-lg-6
                  .feature-item
                    i.icon-screen-smartphone.text-primary
                    h3 Device Mockups
                    p.text-muted Ready to use HTML/CSS device mockups, no Photoshop required!

                .col-lg-6
                  .feature-item
                    i.icon-camera.text-primary
                    h3 Flexible Use
                    p.text-muted Put an image, video, animation, or anything else in the screen!

              .row
                .col-lg-6
                  .feature-item
                    i.icon-present.text-primary
                    h3 Free to Use
                    p.text-muted As always, this theme is free to download and use for any purpose!


                .col-lg-6
                  .feature-item
                    i.icon-lock-open.text-primary
                    h3 Open Source
                    p.text-muted Since this theme is MIT licensed, you can use it commercially!









    section.cta
      .cta-content
        .container
          h2 Stop waiting
          br
          | Start building.
          a(href="#contact").btn.btn-outline.btn-xl.js-scroll-trigger Let's Get Started!
      .overlay

    section#contact.contact.bg-primary
      .container
        h2 We
          i.fa.fa-heart
          new friends!
        ul.list-inline.list-social
          li.list-inline-item.social-twitter
            a(href="#")
              i.fa.fa-twitter
          li.list-inline-item.social-facebook
            a(href="#")
              i.fa.fa-facebook
          li.list-inline-item.social-google-plus
            a(href="#")
              i.fa.fa-google-plus

    footer
      .container
        p &copy; Your Website 2018. All Rights Reserved.
        ul.list-inline
          li.list-inline-item
            a(href="#") Privacy
          li.list-inline-item
            a(href="#") Terms
          li.list-inline-item
            a(href="#") FAQ

    script(src="vendor/jquery/jquery.min.js")
    script(src="vendor/bootstrap/js/bootstrap.bundle.min.js")
    script(src="vendor/jquery-easing/jquery.easing.min.js")
    script(src="js/new-age.min.js")
